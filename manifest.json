{
  "manifest_version": 2,
  "name": "WakaTime configurable",
  "version": "1.0.2",
  "description": "Automatic time tracking for Chrome with project detection.",
  "homepage_url": "https://wakatime.com",
  "devtools_page": "dist/devtools.html",
  "icons": {
    "16": "graphics/wakatime-logo-16.png",
    "48": "graphics/wakatime-logo-48.png",
    "128": "graphics/wakatime-logo-128.png"
  },
  "permissions": [
    "https://api.wakatime.com/*",
    "https://wakatime.com/*",
    "alarms",
    "activeTab",
    "tabs",
    "storage",
    "idle"
  ],
  "background": {
    "scripts": ["dist/events.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "19": "graphics/wakatime-logo-19.png",
      "38": "graphics/wakatime-logo-38.png"
    },
    "default_title": "WakaTime",
    "default_popup": "dist/popup.html",
    "chrome_style": false
  },
  "options_page": "dist/popup.html",
  "applications": {
    "gecko": {
      "id": "addon@wakatime.com"
    }
  }
}
